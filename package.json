{
	"name": "vscode-my",
	"displayName": "My Personal Commands",
	"description": "My personal commands",
	"version": "0.0.2",
	"publisher": "scfrazer",
	"repository": {
		"url": "https://github.com/scfrazer/vscode-my"
	},
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscode-my.wordRight",
				"title": "My: Move cursor a word right"
			},
			{
				"command": "vscode-my.selectExpressionLeft",
				"title": "My: Select expression left"
			},
			{
				"command": "vscode-my.selectExpressionRight",
				"title": "My: Select expression right"
			},
			{
				"command": "vscode-my.deleteExpressionLeft",
				"title": "My: Delete expression left"
			},
			{
				"command": "vscode-my.deleteExpressionRight",
				"title": "My: Delete expression right"
			},
			{
				"command": "vscode-my.previousParagraph",
				"title": "My: Previous paragraph"
			},
			{
				"command": "vscode-my.nextParagraph",
				"title": "My: Next paragraph"
			},
			{
				"command": "vscode-my.addCursorsToLineStarts",
				"title": "My: Add cursors to line starts"
			}
		],
		"keybindings": [
			{
				"key": "ctrl+left",
				"command": "cursorWordStartLeft"
			},
			{
				"key": "ctrl+right",
				"command": "vscode-my.wordRight",
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "ctrl+shift+left",
				"command": "vscode-my.selectExpressionLeft",
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "ctrl+shift+right",
				"command": "vscode-my.selectExpressionRight",
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "ctrl+backspace",
				"command": "vscode-my.deleteExpressionLeft",
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "ctrl+delete",
				"command": "vscode-my.deleteExpressionRight",
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "ctrl+up",
				"command": "vscode-my.previousParagraph",
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "ctrl+shift+up",
				"command": "vscode-my.previousParagraph",
				"args": {
					"select": true
				},
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "ctrl+down",
				"command": "vscode-my.nextParagraph",
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "ctrl+shift+down",
				"command": "vscode-my.nextParagraph",
				"args": {
					"select": true
				},
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "alt+shift+i",
				"command": "vscode-my.addCursorsToLineStarts",
				"when": "editorTextFocus"
			},
			{
				"key": "alt+left",
				"command": "cursorWordPartStartLeft"
			},
			{
				"key": "alt+right",
				"command": "cursorWordPartRight"
			},
			{
				"key": "shift+alt+,",
				"command": "workbench.action.navigateBack"
			},
			{
				"key": "shift+alt+.",
				"command": "workbench.action.navigateForward"
			},
			{
				"key": "ctrl+shift+backspace",
				"command": "deleteWordPartLeft"
			},
			{
				"key": "ctrl+shift+delete",
				"command": "deleteWordPartRight"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	}
}
