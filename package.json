{
	"name": "vscode-my",
	"displayName": "My Personal Commands",
	"description": "My personal commands",
	"version": "0.6.0",
	"publisher": "scfrazer",
	"repository": {
		"url": "https://github.com/scfrazer/vscode-my"
	},
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"extensionKind": [
		"ui"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscode-my.wordLeft",
				"title": "My: Move cursor a word left"
			},
			{
				"command": "vscode-my.wordRight",
				"title": "My: Move cursor a word right"
			},
			{
				"command": "vscode-my.expressionLeft",
				"title": "My: Move cursor an expression left"
			},
			{
				"command": "vscode-my.expressionRight",
				"title": "My: Move cursor an expression right"
			},
			{
				"command": "vscode-my.selectExpressionLeft",
				"title": "My: Select expression left"
			},
			{
				"command": "vscode-my.selectExpressionRight",
				"title": "My: Select expression right"
			},
			{
				"command": "vscode-my.previousParagraph",
				"title": "My: Previous paragraph"
			},
			{
				"command": "vscode-my.nextParagraph",
				"title": "My: Next paragraph"
			},
			{
				"command": "vscode-my.home",
				"title": "My: Home"
			},
			{
				"command": "vscode-my.smartDeleteLeft",
				"title": "My: Smart delete left"
			},
			{
				"command": "vscode-my.smartDeleteRight",
				"title": "My: Smart delete right"
			},
			{
				"command": "vscode-my.selectInsideBrackets",
				"title": "My: Select inside nearest brackets"
			},
			{
				"command": "vscode-my.selectInsideQuotes",
				"title": "My: Select inside nearest quotes"
			},
			{
				"command": "vscode-my.gotoChar",
				"title": "My: Select to char"
			},
			{
				"command": "vscode-my.deleteToChar",
				"title": "My: Select to char"
			},
			{
				"command": "vscode-my.completeCurrentWord",
				"title": "My: Complete current word"
			},
			{
				"command": "vscode-my.addCursorsToLineStarts",
				"title": "My: Add cursors to line starts"
			},
			{
				"command": "vscode-my.addSemicolonToEndOfLine",
				"title": "My: Add a semicolon to end of line"
			},
			{
				"command": "vscode-my.justOneSpace",
				"title": "My: Change multiple spaces to just one"
			},
			{
				"command": "vscode-my.gotoLine",
				"title": "My: Go to line"
			},
			{
				"command": "vscode-my.smartTab",
				"title": "My: Smart tab"
			}
		],
		"keybindings": [
			{
				"key": "ctrl+left",
				"command": "vscode-my.wordLeft",
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "ctrl+right",
				"command": "vscode-my.wordRight",
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "ctrl+alt+left",
				"command": "vscode-my.expressionLeft",
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "ctrl+alt+right",
				"command": "vscode-my.expressionRight",
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "ctrl+shift+left",
				"command": "vscode-my.selectExpressionLeft",
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "ctrl+shift+right",
				"command": "vscode-my.selectExpressionRight",
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "ctrl+up",
				"command": "vscode-my.previousParagraph",
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "ctrl+shift+up",
				"command": "vscode-my.previousParagraph",
				"args": {
					"select": true
				},
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "ctrl+down",
				"command": "vscode-my.nextParagraph",
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "ctrl+shift+down",
				"command": "vscode-my.nextParagraph",
				"args": {
					"select": true
				},
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "ctrl+backspace",
				"command": "vscode-my.smartDeleteLeft",
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "ctrl+delete",
				"command": "vscode-my.smartDeleteRight",
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "alt+d",
				"command": "vscode-my.selectInsideBrackets",
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "ctrl+e",
				"command": "vscode-my.selectInsideQuotes",
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "alt+m",
				"command": "vscode-my.gotoChar",
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "ctrl+shift+m",
				"command": "vscode-my.gotoChar",
				"args": {
					"select": true
				},
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "ctrl+m",
				"command": "vscode-my.deleteToChar",
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "ctrl+'",
				"command": "vscode-my.completeCurrentWord",
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "alt+shift+i",
				"command": "vscode-my.addCursorsToLineStarts",
				"when": "editorTextFocus"
			},
			{
				"key": "ctrl+;",
				"command": "vscode-my.addSemicolonToEndOfLine",
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "ctrl+k space",
				"command": "vscode-my.justOneSpace",
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "ctrl+g",
				"command": "vscode-my.gotoLine",
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "tab",
				"command": "vscode-my.smartTab",
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "alt+home",
				"command": "cursorLineStart",
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "shift+alt+home",
				"command": "cursorLineStartSelect",
				"when": "textInputFocus && !accessibilityModeEnabled"
			},
			{
				"key": "ctrl+shift+-",
				"command": "cursorWordPartRight"
			},
			{
				"key": "ctrl+shift+backspace",
				"command": "deleteWordPartLeft"
			},
			{
				"key": "ctrl+shift+delete",
				"command": "deleteWordPartRight"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	}
}
